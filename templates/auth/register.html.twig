{% extends 'auth/base.html.twig' %}

{% block title %} | Login {% endblock %}

{% block content %}

<div class="container container-tight">
    <div class="text-center mb-4">
        <span class="navbar-brand navbar-brand-autodark">
            <img src="{{ asset('images/login/ticketier.png') }}" width="110" height="32" alt="Tabler" class="navbar-brand-image">
        </span>
    </div>
    <div class="card card-md" style="border-top: 3px solid #E81341;">
        <h2 class="h2 text-center mb-4" style="margin-top: 30px">Sign up to enjoy perks</h2>
        <div class="row" style="margin-bottom: 45px">
            <div class="col-10 col-sm-10 col-md-10 col-lg-10 m-auto">
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" class="btn btn-4 w-100 login-with-google-btn">
                    Continue with Google
                </a>
            </div>
        </div>
        <div class="hr-text">OR</div>

        <div class="card-body">
            <h2 class="h2 text-center mb-4">Register your account</h2>
            <form method="post" autocomplete="off" novalidate>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input value="" name="email" id="email" type="email" class="form-control" autocomplete="full_name" required autofocus type='text' required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input value="" name="full_name" id="full_name" class="form-control" autocomplete="full_name" required autofocus type='text' required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input value="" name="username" id="full_name" class="form-control" autocomplete="username" required autofocus type='text' required>
                </div>

                <div class="mb-2">
                    <label class="form-label">
                        Password
                        <!-- <span class="form-label-description"> -->
                        <!--     <a href="./forgot-password.html">I forgot password</a> -->
                        <!-- </span> -->
                    </label>
                    <div class="input-group input-group-flat">
                        <input type="password" name="_password" id="password" class="form-control {% if error %} is-invalid{% endif %}" autocomplete="current-password" required>
                        {% if error %}
                        <span class="invalid-feedback" role="alert">
                            <strong>Check your password</strong>
                        </span>
                        {% endif %}
                        <span style="color: grey" class="mt-1">Your password must be at least 8 characters long and contain 1 number, 1 uppercase and 1 lowercase letter</span>
                        <!-- <span class="input-group-text"> -->
                        <!--     <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip"> -->
                        <!--         <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-1"><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg> -->
                        <!--     </a> -->
                        <!-- </span> -->
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label">
                        Confirm Password
                    </label>
                    <div class="input-group input-group-flat">
                        <input type="password" name="c_password" id="c_password" class="form-control {% if error %} is-invalid{% endif %}" autocomplete="current-password" required>
                        {% if error %}
                        <span class="invalid-feedback" role="alert">
                            <strong>Check your password</strong>
                        </span>
                        {% endif %}

                    </div>
                </div>
                <div class="mb-2">
                    <!-- <label class="form-check"> -->
                    <!--     <input type="checkbox" class="form-check-input"/> -->
                    <!--     <span class="form-check-label">Remember me on this device</span> -->
                    <!-- </label> -->
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Sign up</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center text-secondary mt-3">
        Already have account? <a href="{{ path('app_login') }}" tabindex="-1">Sign in</a>
    </div>
</div>

{% endblock %}
